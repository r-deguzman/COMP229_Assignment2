<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Full Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact Name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="noTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="noTextField"
            placeholder="Contact Number"
            name="number"
            value="<%= contact.number %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="emailTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Email Address"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-update"></i> Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
