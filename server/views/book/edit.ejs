<%- include('../partials/header.ejs') %> <%- include('../partials/main_nav.ejs')
%>

<!--content for the Add page-->
<div class="page container-fluid">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>
      <form class="form" method="POST">
        <table class="table">
          <tbody>
            <tr>
              <th scope="row"><label for="nameTextField">Book Title</label></th>
              <td>
                <input
                  type="text"
                  class="form control"
                  id="nameTextField"
                  placeholder="Enter the Book Title"
                  name="name"
                  value="<%=book.name%>"
                  required
                />
              </td>
            </tr>
            <tr>
              <th scope="row"><label for="authorTextField">Author</label></th>
              <td>
                <input
                  type="text"
                  class="form control"
                  id="authorTextField"
                  placeholder="Enter the Book's Author"
                  name="author"
                  value="<%=book.author%>"
                  required
                />
              </td>
            </tr>
            <tr>
              <th scope="row"><label for="publishedTextField">Year</label></th>
              <td>
                <input
                  type="text"
                  class="form control"
                  id="publishedTextField"
                  placeholder="Enter the year of publication"
                  name="published"
                  value="<%=book.published%>"
                  required
                />
              </td>
            </tr>
            <tr>
              <th scope="row">
                <label for="descriptionTextArea">Description</label>
              </th>
              <td>
                <textarea
                  type="text"
                  class="form control"
                  cols="23"
                  id="descriptionTextArea"
                  placeholder="Enter a brief description of the book"
                  name="description"
                  value="<%=book.description%>"
                  required
                ></textarea>
              </td>
            </tr>
            <tr>
              <th scope="row">
                <label for="PriceTextField">Price</label>
              </th>
              <td>
                <input
                  type="number"
                  class="form control"
                  id="priceTextField"
                  placeholder="Enter the Book's price"
                  name="price"
                  value="<%=book.price%>"
                  required
                />
              </td>
            </tr>
          </tbody>
        </table>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>submit
        </button>
        <a href="/bookList" class="btn btn-warning"
          ><i class="fas fa-undo"></i>cancel</a
        >
      </form>
    </div>
  </div>
</div>

<%- include('../partials/bottom_nav.ejs') %> <%-
include('../partials/footer.ejs') %>
